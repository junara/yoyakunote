<div class="container knowledges-list-partial <%= div_tag_name %> flexbox-container ">
  <% knowledges.each do |knowledge| %>
  <div class="flexbox-item">
    <div class="">
      <%= link_to image_tag(knowledge.webimage_url,
       alt: 'knowledge', class: 'img-rounded img-responsive'),
        knowledge_path(uuid: knowledge.uuid) %>
    </div>
    <div>
      <%= truncate(knowledge.message, length: 100) %>
    </div>
    <div class="">
      by <%= knowledge.user.company %> 所属の <%= knowledge.user.name %>
    </div>
  </div>
  <% end %>
</div>
